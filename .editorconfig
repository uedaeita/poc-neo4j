##########################################
# Common Settings
##########################################

# This file is the top-most EditorConfig file
root=true

# All Files
[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

##########################################
# File Extension Settings
##########################################

[*.{css,scss,js,jsx,json,rake,rb,ts,tsx,vue,yml}]
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
